        <Style x:Key="PlayButton" TargetType="Button" BasedOn="{StaticResource StandardButton}">
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5" />
                </Trigger>
            </Style.Triggers>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Rectangle Fill="Transparent" />
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Viewbox Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                                    <Path x:Name="IconPath" Style="{StaticResource PlayoutIcon}">
                                    </Path>
                                </Viewbox>
                            </StackPanel>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="IconPath" Property="Fill" Value="{StaticResource BackgroundSelected}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="StopButton" TargetType="Button" BasedOn="{StaticResource StandardButton}">
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5" />
                </Trigger>
            </Style.Triggers>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Rectangle Fill="Transparent" />
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Viewbox Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                                    <Path x:Name="IconPath" Style="{StaticResource StopIcon}">
                                        <Path.RenderTransform>
                                            <ScaleTransform CenterX="260" CenterY="220" ScaleX="0.8" ScaleY="0.8" />
                                        </Path.RenderTransform>
                                    </Path>
                                </Viewbox>
                            </StackPanel>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="IconPath" Property="Fill" Value="{StaticResource BackgroundSelected}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="PlusButton" TargetType="Button" BasedOn="{StaticResource StandardButton}">
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5" />
                </Trigger>
            </Style.Triggers>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Rectangle Fill="Transparent" />
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Viewbox Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                                    <Path x:Name="IconPath" Style="{StaticResource PlusIcon}" />
                                </Viewbox>
                            </StackPanel>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="IconPath" Property="Fill" Value="{StaticResource BackgroundSelected}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MinusButton" TargetType="Button" BasedOn="{StaticResource StandardButton}">
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5" />
                </Trigger>
            </Style.Triggers>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Rectangle Fill="Transparent" />
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Viewbox Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                                    <Path x:Name="IconPath" Style="{StaticResource MinusIcon}" />
                                </Viewbox>
                            </StackPanel>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="IconPath" Property="Fill" Value="{StaticResource BackgroundSelected}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="DataGridTextColumnStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{StaticResource Foreground}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CaretBrush" Value="{StaticResource Foreground}" />
        </Style>

        <Style x:Key="PropertyNameTextBlock" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="TextAlignment" Value="Right" />
        </Style>
        <Style x:Key="FieldDescriptionTextBlock" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource PropertyNameTextBlock}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="FontSize" Value="10" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="LineHeight" Value="8" />
            <Setter Property="LineStackingStrategy" Value="BlockLineHeight" />
            <Setter Property="Foreground" Value="{StaticResource LightBackground}" />
        </Style>
        <Style x:Key="SettingsField" TargetType="TextBox" BasedOn="{StaticResource StandardTextBox}">
            <Setter Property="Width" Value="50" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="TextBlock" BasedOn="{StaticResource PropertyNameTextBlock}" />
        <GridLength x:Key="DescColWidth">160</GridLength>
        <GridLength x:Key="IntValueWidth">70</GridLength>

        <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource StandardComboBox}">
            <Setter Property="Margin" Value="1" />
            <Setter Property="MinWidth" Value="150" />
        </Style>
        

    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TabControl>
            <TabItem Header="{x:Static l:Resources.ConfigWindowOptionsTabHeader}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource StandardComboBox}">
                            <Style.Resources>
                                <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource StandardTextBlock}">
                                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                                    <Setter Property="TextAlignment" Value="Left" />
                                </Style>
                            </Style.Resources>
                        </Style>
                    </StackPanel.Resources>
                        <GroupBox Header="{x:Static l:Resources.ConfigWindowOptionsTabPathsGb}">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="{StaticResource DescColWidth}" />
                                    <ColumnDefinition MinWidth="50" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{x:Static l:Resources.ConfigWindowOptionsTabPathsMediaPath}" Grid.Column="0" Margin="5,7" />
                                <TextBox Grid.Column="1" Text="{Binding Path=MediaPath}" VerticalContentAlignment="Center" />
                                <Button Name="PickMediaPathButton" Padding="5 0" Grid.Column="2" Content="{x:Static l:Resources.BrowseForPathButton}" Click="PickMediaPathButton_Click" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="{StaticResource DescColWidth}" />
                                    <ColumnDefinition MinWidth="50" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{x:Static l:Resources.ConfigWindowOptionsTabPathsDataPath}" Grid.Column="0" Margin="5,7" />
                                <TextBox Grid.Column="1" Text="{Binding Path=DataPath}" VerticalContentAlignment="Center" />
                                <Button Name="PickDataPathButton" Padding="5 0" Grid.Column="2" Content="{x:Static l:Resources.BrowseForPathButton}" Click="PickDataPathButton_Click" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="{StaticResource DescColWidth}" />
                                    <ColumnDefinition MinWidth="50" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{x:Static l:Resources.ConfigWindowOptionsTabPathsTemplatePath}" Grid.Column="0" Margin="5,7" />
                                <TextBox Grid.Column="1" Text="{Binding Path=TemplatePath}" VerticalContentAlignment="Center" />
                                <Button Name="PickTemplatePathButton" Padding="5 0" Grid.Column="2" Content="{x:Static l:Resources.BrowseForPathButton}" Click="PickTemplatePathButton_Click" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="{StaticResource DescColWidth}" />
                                    <ColumnDefinition MinWidth="50" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{x:Static l:Resources.ConfigWindowOptionsTabPathsFontPath}" Grid.Column="0" Margin="5,7" />
                                <TextBox Grid.Column="1" Text="{Binding Path=FontPath}" VerticalContentAlignment="Center" />
                                <Button Name="PickFontPathButton" Padding="5 0" Grid.Column="2" Content="{x:Static l:Resources.BrowseForPathButton}" Click="PickFontPathButton_Click" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="{StaticResource DescColWidth}" />
                                    <ColumnDefinition MinWidth="50" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{x:Static l:Resources.ConfigWindowOptionsTabPathsLogPath}" Grid.Column="0" Margin="5,7" />
                                <TextBox Grid.Column="1" Text="{Binding Path=LogPath}" VerticalContentAlignment="Center" />
                                <Button Name="PickLogPathButton" Padding="5 0" Grid.Column="2" Content="{x:Static l:Resources.BrowseForPathButton}" Click="PickLogPathButton_Click" />
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                        <GroupBox Header="{x:Static l:Resources.ConfigWindowOptionsTabLogGb}">
                        <StackPanel>
                            <Grid>
                                <Grid.Resources>
                                    <ObjectDataProvider x:Key="LogLevelList" ObjectType="{x:Type sys:Enum}" MethodName="GetValues">
                                        <ObjectDataProvider.MethodParameters>
                                            <x:Type TypeName="local:LogLevel" />
                                        </ObjectDataProvider.MethodParameters>
                                    </ObjectDataProvider>
                                </Grid.Resources>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="{StaticResource DescColWidth}" />
                                    <ColumnDefinition MinWidth="50" Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{x:Static l:Resources.ConfigWindowOptionsTabLogLogLevel}" Grid.Column="0" Margin="5,7" />
                                    <ComboBox  Grid.Column="1" VerticalContentAlignment="Center" ItemsSource="{Binding Source={StaticResource LogLevelList}}" SelectedValue="{Binding Path=LogLevel}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate DataType="{x:Type local:LogLevel}">
                                            <TextBlock Text="{Binding Converter={StaticResource enumConverter}}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="{x:Static l:Resources.ConfigWindowOptionsTabPassGb}">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="{StaticResource DescColWidth}" />
                                    <ColumnDefinition MinWidth="50" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{x:Static l:Resources.ConfigWindowOptionsTabPassValue}" Grid.Column="0" Margin="5,7" />
                                <TextBox Grid.Column="1" Text="{Binding Path=LockPass}" VerticalContentAlignment="Center" />
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="{x:Static l:Resources.ConfigWindowOptionsTabFlashGb}">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="{StaticResource DescColWidth}" />
                                    <ColumnDefinition MinWidth="50" Width="{StaticResource IntValueWidth}" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{x:Static l:Resources.ConfigWindowOptionsTabFlashBuffer}" Grid.Column="0" Margin="5,7" />
                                <TextBox Grid.Column="1" Text="{Binding Path=FlashBuffer}" VerticalContentAlignment="Center" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="{StaticResource DescColWidth}" />
                                    <ColumnDefinition MinWidth="50" Width="{StaticResource IntValueWidth}" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{x:Static l:Resources.ConfigWindowOptionsTabFlashEnableProducer}" Grid.Column="0" Margin="5,7" />
                                <CheckBox Grid.Column="1" IsChecked="{Binding Path=FlashEnableProducer}" />
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="{x:Static l:Resources.ConfigWindowOptionsTabFfmpegGb}">
                        <StackPanel>
                            <Grid>
                                <Grid.Resources>
                                    <ObjectDataProvider x:Key="FfmpegDeinterlaceList" ObjectType="{x:Type sys:Enum}" MethodName="GetValues">
                                        <ObjectDataProvider.MethodParameters>
                                            <x:Type TypeName="local:FfmpegDeinterlace" />
                                        </ObjectDataProvider.MethodParameters>
                                    </ObjectDataProvider>
                                </Grid.Resources>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="{StaticResource DescColWidth}" />
                                    <ColumnDefinition MinWidth="50" Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{x:Static l:Resources.ConfigWindowOptionsTabFfmpegDeinterlace}" Grid.Column="0" Margin="5,7" />
                                <ComboBox Grid.Column="1" VerticalContentAlignment="Center" ItemsSource="{Binding Source={StaticResource FfmpegDeinterlaceList}}" SelectedValue="{Binding Path=FfmpegDeinterlace}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate DataType="{x:Type local:FfmpegDeinterlace}">
                                            <TextBlock Text="{Binding Converter={StaticResource enumConverter}}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="{StaticResource DescColWidth}" />
                                    <ColumnDefinition MinWidth="50" Width="{StaticResource IntValueWidth}" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{x:Static l:Resources.ConfigWindowOptionsTabFfmpegThreads}" Grid.Column="0" Margin="5,7" />
                                <TextBox Grid.Column="1" Text="{Binding Path=FfmpegThreads}" VerticalContentAlignment="Center" />
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="{x:Static l:Resources.ConfigWindowOptionsTabHtmlGb}">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="{StaticResource DescColWidth}" />
                                    <ColumnDefinition MinWidth="50" Width="{StaticResource IntValueWidth}" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                    <TextBlock Text="{x:Static l:Resources.ConfigWindowOptionsTabHtmlDebugPort}" Grid.Column="0" Margin="5,7" />
                                <TextBox Grid.Column="1" Text="{Binding Path=HtmlRemoteDebugPort}" VerticalContentAlignment="Center" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="{StaticResource DescColWidth}" />
                                    <ColumnDefinition MinWidth="50" Width="{StaticResource IntValueWidth}" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                    <TextBlock Text="{x:Static l:Resources.ConfigWindowOptionsTabHtmlEnableGpu}" Grid.Column="0" Margin="5,7" />
                                <CheckBox Grid.Column="1" IsChecked="{Binding Path=HtmlEnableGpu}" />
